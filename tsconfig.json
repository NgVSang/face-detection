{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ES2020",
      "moduleResolution": "node",
      "allowJs": true,
      "declaration": true,
      "removeComments": true,
      "noImplicitAny": false,
      "rootDir": "src",
      "outDir": "dist",
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "lib": ["ES6", "DOM"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
  